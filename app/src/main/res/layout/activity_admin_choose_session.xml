<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926"
    tools:context=".AdminChooseSessionActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothic"
        android:padding="25dp"
        android:layout_marginTop="10dp"
        android:text="Choose Session"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothic"
        android:paddingHorizontal="20dp"
        android:text="Venue"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/venue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/centurygothic"
        android:paddingHorizontal="20dp"
        android:text="Choose Date"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/datebg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothic"
        android:text="20 / 02"
        android:paddingHorizontal="10dp"
        android:paddingVertical="25dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.22" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/choosetimeLayout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:paddingHorizontal="20dp"
            android:text="Choose Time"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="Show Duration : 15 mins"
            android:textColor="#6D6D80"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <ImageView
            android:id="@+id/imtime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/timebg"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:alpha="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <ImageView
            android:id="@+id/imtime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/timebg"
            android:layout_marginTop="20dp"
            android:alpha="0.35"
            app:layout_constraintStart_toEndOf="@id/imtime1"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <ImageView
            android:id="@+id/imtime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.35"
            android:background="@drawable/timebg"
            app:layout_constraintStart_toEndOf="@id/imtime2"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <ImageView
            android:id="@+id/imtime4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/timebg"
            android:layout_marginTop="20dp"
            android:alpha="0.35"
            app:layout_constraintStart_toEndOf="@id/imtime3"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvnoshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/centurygothic"
            android:text="No show timings available today."
            android:alpha="0.35"
            app:layout_constraintVertical_bias="0.10"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>

        <TextView
            android:id="@+id/tvtime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/centurygothic"
            android:text="10 AM"
            android:alpha="0.35"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imtime1"
            app:layout_constraintEnd_toEndOf="@+id/imtime1"
            app:layout_constraintStart_toStartOf="@+id/imtime1" />

        <TextView
            android:id="@+id/tvtime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:padding="10dp"
            android:text="12 Noon"
            android:alpha="0.35"
            app:layout_constraintVertical_bias="0.10"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imtime2"
            app:layout_constraintEnd_toEndOf="@+id/imtime2"
            app:layout_constraintStart_toStartOf="@+id/imtime2" />

        <TextView
            android:id="@+id/tvtime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/centurygothic"
            android:text="2 PM"
            android:alpha="0.35"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imtime3"
            app:layout_constraintEnd_toEndOf="@+id/imtime3"
            app:layout_constraintStart_toStartOf="@+id/imtime3" />

        <TextView
            android:id="@+id/tvtime4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:padding="10dp"
            android:text="4 PM"
            android:alpha="0.35"
            app:layout_constraintVertical_bias="0.10"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imtime4"
            app:layout_constraintEnd_toEndOf="@+id/imtime4"
            app:layout_constraintStart_toStartOf="@+id/imtime4" />


    </androidx.constraintlayout.widget.ConstraintLayout>







    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/seatsavailableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choosetimeLayout">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:paddingHorizontal="20dp"
            android:text="Seats Available"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imseats"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/seatavbg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/tvseats1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/centurygothic"
            android:text="Loading..."
            app:layout_constraintVertical_bias="0.10"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imseats"
            app:layout_constraintEnd_toEndOf="@+id/imseats"
            app:layout_constraintStart_toStartOf="@+id/imseats"
            app:layout_constraintTop_toTopOf="@+id/imseats" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noOfSeatsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/seatsavailableLayout"
        app:layout_constraintTop_toTopOf="@+id/seatsavailableLayout">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:paddingHorizontal="20dp"
            android:text="Book Seats"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imseats1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/seatavbg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:id="@+id/tvseats2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/centurygothic"
            android:text="1"
            app:layout_constraintVertical_bias="0.10"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imseats1"
            app:layout_constraintEnd_toEndOf="@+id/imseats1"
            app:layout_constraintStart_toStartOf="@+id/imseats1"
            app:layout_constraintTop_toTopOf="@+id/imseats1" />

        <TextView
            android:id="@+id/tvseats2plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/centurygothic"
            android:text="+"
            app:layout_constraintHorizontal_bias="0.80"
            app:layout_constraintVertical_bias="0.10"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imseats1"
            app:layout_constraintEnd_toEndOf="@+id/imseats1"
            app:layout_constraintStart_toStartOf="@+id/imseats1"
            app:layout_constraintTop_toTopOf="@+id/imseats1" />

        <TextView
            android:id="@+id/tvseats2minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/centurygothic"
            android:text="-"
            app:layout_constraintHorizontal_bias="0.20"
            app:layout_constraintVertical_bias="0.10"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imseats1"
            app:layout_constraintEnd_toEndOf="@+id/imseats1"
            app:layout_constraintStart_toStartOf="@+id/imseats1"
            app:layout_constraintTop_toTopOf="@+id/imseats1" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btnbg"
        android:fontFamily="@font/centurygothic"
        android:paddingBottom="35dp"
        android:text="CHOOSE SESSION"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>