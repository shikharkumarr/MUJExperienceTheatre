<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:paddingStart="20dp"
        android:padding="10dp"
        android:text="Experience Theatre"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothic"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:text="About"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="Did you only hear the excellence of Manipal University Jaipur? At the Experience Theatre, lets visually experience it.
Experience Theater is a result of world-class infrastructure and immersion center where you can see the history, achievements,
activities and all about Manipal University Jaipur in one place.\nAre you excited? Just book your ticket for this small show for free and enjoy the amazing Visual experience at the
Experience Theatre."
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/centurygothic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothic"
        android:paddingStart="20dp"
        android:text="Images"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/centurygothic"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:text="See all >"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imagev1"
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imagev2"
        android:layout_margin="20dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/image2"
        app:layout_constraintStart_toEndOf="@id/imagev1"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:paddingBottom="35dp"
            android:text="YOUR TICKETS"
            android:layout_margin="5dp"
            android:background="@drawable/btnbg2"
            app:backgroundTint="@null"
            android:layout_weight="1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:paddingBottom="35dp"
            android:text="BOOK TICKET"
            android:background="@drawable/btnbg3"
            app:backgroundTint="@null"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/white" />

    </LinearLayout>
    

</androidx.constraintlayout.widget.ConstraintLayout>